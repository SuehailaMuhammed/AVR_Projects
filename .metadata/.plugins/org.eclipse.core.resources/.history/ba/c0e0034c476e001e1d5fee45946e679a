#include <avr/io.h>
#include "std.Types.h"
#include <util/delay.h>

#define DDRA *((u8*)0x3A)
#define PORTA *((u8*)0x3B)
#define PINA *((volatile u8*)0x39)

int main(void) {
    // Initialize the DDR (Data Direction Register) for LEDs and Switches
    DDRA |= (1 << PA0) | (1 << PA1); // Set PA0 and PA1 as output (LEDs)
    DDRB &= ~((1 << PB0) | (1 << PB1) | (1 << PB2)); // Set PB0, PB1, and PB2 as input (Switches)

    while (1) {
        // Check if switch 1 is pressed
        if (bit_is_clear(PINB, PB0)) {
            // Turn on LED1
            PORTA |= (1 << PA0);
        } else {
            // Turn off LED1
            PORTA &= ~(1 << PA0);
        }

        // Check if switch 2 is pressed
        if (bit_is_clear(PINB, PB1)) {
            // Turn on LED2
            PORTA |= (1 << PA1);
        } else {
            // Turn off LED2
            PORTA &= ~(1 << PA1);
        }

        // Check if switch 3 is pressed
        if (bit_is_clear(PINB, PB2)) {
            // Turn on both LEDs
            PORTA |= (1 << PA0) | (1 << PA1);
        } else {
            // Turn off both LEDs
            PORTA &= ~((1 << PA0) | (1 << PA1));
        }
    }

    return 0;
}
